--[[
    SCRIPT: THUY TIEN REDZ (LUXURY UI)
    FEATURE: LED RGB TEXT + PREMIUM KEY
    KEY: thuytien
]]

local PremiumKey = "thuytien"

-- [ TẠO GIAO DIỆN UI ] --
local ScreenGui = Instance.new("ScreenGui", game:GetService("CoreGui"))
local MainFrame = Instance.new("Frame", ScreenGui)
local UICorner = Instance.new("UICorner", MainFrame)
local Title = Instance.new("TextLabel", MainFrame)
local SubTitle = Instance.new("TextLabel", MainFrame)
local KeyInput = Instance.new("TextBox", MainFrame)
local UICorner2 = Instance.new("UICorner", KeyInput)
local SubmitBtn = Instance.new("TextButton", MainFrame)
local UICorner3 = Instance.new("UICorner", SubmitBtn)

-- Cấu hình Frame chính
MainFrame.Name = "ThuyTienUI"
MainFrame.Size = UDim2.new(0, 320, 0, 180)
MainFrame.Position = UDim2.new(0.5, -160, 0.4, -90)
MainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true -- Có thể kéo di chuyển trên màn hình

UICorner.CornerRadius = UDim.new(0, 15)

-- Cấu hình Tiêu đề (CHỮ CHẠY LED RGB)
Title.Size = UDim2.new(1, 0, 0, 40)
Title.Position = UDim2.new(0, 0, 0, 10)
Title.Text = "Thuy Tien Redz"
Title.Font = Enum.Font.FredokaOne
Title.TextSize = 30
Title.BackgroundTransparency = 1

-- Hiệu ứng LED RGB cho Tiêu đề
task.spawn(function()
    while task.wait() do
        local hue = tick() % 3 / 3
        Title.TextColor3 = Color3.fromHSV(hue, 0.8, 1)
    end
end)

SubTitle.Size = UDim2.new(1, 0, 0, 20)
SubTitle.Position = UDim2.new(0, 0, 0, 45)
SubTitle.Text = "Premium Key System"
SubTitle.TextColor3 = Color3.fromRGB(200, 200, 200)
SubTitle.Font = Enum.Font.SourceSansItalic
SubTitle.TextSize = 14
SubTitle.BackgroundTransparency = 1

-- Ô nhập Key
KeyInput.Size = UDim2.new(0, 240, 0, 35)
KeyInput.Position = UDim2.new(0.5, -120, 0.5, -10)
KeyInput.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
KeyInput.PlaceholderText = "Nhập Key tại đây..."
KeyInput.Text = ""
KeyInput.TextColor3 = Color3.fromRGB(255, 255, 255)
KeyInput.Font = Enum.Font.SourceSansBold
KeyInput.TextSize = 16
UICorner2.CornerRadius = UDim.new(0, 8)

-- Nút xác nhận
SubmitBtn.Size = UDim2.new(0, 120, 0, 30)
SubmitBtn.Position = UDim2.new(0.5, -60, 0.8, -5)
SubmitBtn.BackgroundColor3 = Color3.fromRGB(255, 105, 180) -- Màu hồng
SubmitBtn.Text = "LOGIN"
SubmitBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
SubmitBtn.Font = Enum.Font.SourceSansBold
SubmitBtn.TextSize = 18
UICorner3.CornerRadius = UDim.new(0, 8)

-- [ XỬ LÝ LOGIC ] --
SubmitBtn.MouseButton1Click:Connect(function()
    if KeyInput.Text == PremiumKey then
        SubmitBtn.Text = "CHÍNH XÁC!"
        SubmitBtn.BackgroundColor3 = Color3.fromRGB(0, 255, 127)
        task.wait(0.5)
        ScreenGui:Destroy()
        
        -- Thông báo load script
        game:GetService("StarterGui"):SetCore("SendNotification", {
            Title = "Thuy Tien Redz",
            Text = "Đang tải 100% tính năng RedzHub...",
            Duration = 5
        })

        -- CHẠY SCRIPT GỐC
        loadstring(game:HttpGet("https://raw.githubusercontent.com/huy384/redzHub/refs/heads/main/redzHub.lua"))()
    else
        SubmitBtn.Text = "SAI KEY!"
        SubmitBtn.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
        task.wait(1)
        SubmitBtn.Text = "LOGIN"
        SubmitBtn.BackgroundColor3 = Color3.fromRGB(255, 105, 180)
        KeyInput.Text = ""
    end
end)

