--[[
    SCRIPT: THUY TIEN REDZ (FULL FEATURES)
    GI·ªÆ 100% T√çNH NƒÇNG C·ª¶A REDZHUB
    M√ÄU CH·ª¶ ƒê·∫†O: H·ªíNG (PINK)
    KEY PREMIUM: thuytien
]]

local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

-- [ C·∫§U H√åNH ] --
local Config = {
    Key = "thuytien",
    Name = "Thuy Tien Redz",
    PinkColor = Color3.fromRGB(255, 105, 180) -- M√†u h·ªìng ƒë·∫≠m
}

-- [ H√ÄM GHI ƒê√à GIAO DI·ªÜN REDZ ] --
local function HijackRedzUI()
    task.spawn(function()
        while task.wait(0.5) do
            local colorRGB = Color3.fromHSV(tick() % 5 / 5, 0.6, 1)
            pcall(function()
                for _, v in pairs(game:GetService("CoreGui"):GetDescendants()) do
                    -- ƒê·ªïi t·∫•t c·∫£ ti√™u ƒë·ªÅ th√†nh t√™n Thuy Tien
                    if v:IsA("TextLabel") or v:IsA("TextButton") then
                        if v.Text:find("Redz") or v.Text:find("redzHub") then
                            v.Text = v.Text:gsub("Redz", "Thuy Tien"):gsub("redzHub", "Thuy Tien Redz")
                            v.TextColor3 = colorRGB -- Ch·ªØ ch·∫°y m√†u RGB
                        end
                    end
                    -- ƒê·ªïi c√°c thanh bar, khung vi·ªÅn sang m√†u h·ªìng
                    if v:IsA("Frame") and (v.BackgroundColor3 == Color3.fromRGB(170, 0, 0) or v.Name:find("Bar")) then
                        v.BackgroundColor3 = Config.PinkColor
                    end
                end
            end)
        end
    end)
end

-- [ H√ÄM M·ªû REDZHUB G·ªêC ] --
local function LaunchFullFeatures()
    -- H·ªá th·ªëng ch·ªëng Ban cho Delta
    pcall(function()
        local g = getmetatable(game)
        setreadonly(g, false)
        local old = g.__index
        g.__index = newcclosure(function(self, b)
            if not checkcaller() and (b == "WalkSpeed" or b == "JumpPower") then return 16 end
            return old(self, b)
        end)
    end)

    -- G·ªçi 100% t√≠nh nƒÉng c·ªßa RedzHub (Auto Farm, Sea Event, Raid,...)
    loadstring(game:HttpGet("https://raw.githubusercontent.com/huy384/redzHub/refs/heads/main/redzHub.lua"))()
    
    -- Ch·∫°y h√†m ƒë√® giao di·ªán
    HijackRedzUI()
end

-- [ GIAO DI·ªÜN NH·∫¨P KEY PREMIUM ] --
local Window = Fluent:CreateWindow({
    Title = Config.Name,
    SubTitle = "Pink Premium Hub",
    TabWidth = 160,
    Size = Vector2.new(580, 460),
    Acrylic = true,
    Theme = "Rose", -- Theme h·ªìng c·ªßa Fluent
    MinimizeKey = Enum.KeyCode.End
})

local Tabs = {
    Key = Window:AddTab({ Title = "Authentication", Icon = "lock" })
}

Tabs.Key:AddParagraph({
    Title = "üíñ H·ªá Th·ªëng Thuy Tien Redz",
    Content = "H√£y nh·∫≠p Key Premium ƒë·ªÉ k√≠ch ho·∫°t to√†n b·ªô t√≠nh nƒÉng c·ªßa RedzHub."
})

Tabs.Key:AddInput("InputKey", {
    Title = "Nh·∫≠p Key Premium",
    Description = "Key l√†: thuytien",
    Default = "",
    Placeholder = "Nh·∫≠p key t·∫°i ƒë√¢y...",
    Callback = function(Value)
        if Value:lower() == Config.Key then
            Fluent:Notify({
                Title = "Ch√≠nh X√°c!",
                Content = "ƒêang m·ªü to√†n b·ªô t√≠nh nƒÉng RedzHub cho b·∫°n...",
                Duration = 5
            })
            task.wait(1)
            Window:Destroy() -- ƒê√≥ng b·∫£ng Key
            LaunchFullFeatures() -- M·ªü Hub ch√≠nh
        end
    end
})

-- [ N√öT N·ªîI H·ªíNG CHO DELTA ] --
local ScreenGui = Instance.new("ScreenGui")
local ImageButton = Instance.new("ImageButton")
local UICorner = Instance.new("UICorner")

ScreenGui.Name = "ThuyTienButton"
ScreenGui.Parent = game:GetService("CoreGui")
ImageButton.Parent = ScreenGui
ImageButton.Size = UDim2.new(0, 55, 0, 55)
ImageButton.Position = UDim2.new(0.12, 0, 0.15, 0)
ImageButton.BackgroundColor3 = Config.PinkColor
ImageButton.Image = "rbxassetid://15291242337" -- Icon ƒë·∫πp
ImageButton.Draggable = true
UICorner.CornerRadius = UDim.new(1, 0)
UICorner.Parent = ImageButton

ImageButton.MouseButton1Click:Connect(function()
    game:GetService("VirtualInputManager"):SendKeyEvent(true, Enum.KeyCode.End, false, game)
end)

-- T·ª± ƒë·ªông l∆∞u Key (T√≠nh nƒÉng th√™m)
if readfile and writefile then
    local fileName = "ThuyTienKey.txt"
    if isfile(fileName) then
        local savedKey = readfile(fileName)
        if savedKey == Config.Key then
            Fluent:Notify({Title = "Auto Login", Content = "ƒê√£ nh·∫≠n di·ªán Key c≈©, ƒëang v√†o th·∫≥ng...", Duration = 3})
            task.wait(1)
            Window:Destroy()
            LaunchFullFeatures()
        end
    else
        -- L∆∞u key khi nh·∫≠p ƒë√∫ng
        task.spawn(function()
            while task.wait(1) do
                if not game:GetService("CoreGui"):FindFirstChild(Window.Name) then 
                    writefile(fileName, Config.Key)
                    break 
                end
            end
        end)
    end
end
